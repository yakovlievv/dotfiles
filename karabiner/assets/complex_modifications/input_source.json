{
  "title": "Left Command to Option except Cmd+Tab and Cmd+Q (correct holding)",
  "rules": [
    {
      "description": "Alt + Shift to Ctrl + Option + Space (rev 2)",
      "manipulators": [
        {
          "from": {
            "key_code": "left_shift",
            "modifiers": { "mandatory": ["left_option"] }
          },
          "to": [
            {
              "key_code": "left_shift",
              "lazy": true,
              "modifiers": ["left_option"]
            }
          ],
          "to_if_alone": [
            {
              "key_code": "spacebar",
              "modifiers": ["left_control", "left_option"]
            }
          ],
          "type": "basic"
        },
        {
          "from": {
            "key_code": "left_option",
            "modifiers": { "mandatory": ["left_shift"] }
          },
          "to": [
            {
              "key_code": "left_option",
              "lazy": true,
              "modifiers": ["left_shift"]
            }
          ],
          "to_if_alone": [
            {
              "key_code": "spacebar",
              "modifiers": ["left_control", "left_option"]
            }
          ],
          "type": "basic"
        }
      ]
    }
  ]
}
