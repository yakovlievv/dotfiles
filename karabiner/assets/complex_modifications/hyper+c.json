{
  "title": "Left Command to Option except Cmd+Tab and Cmd+Q (correct holding)",
  "rules": [
    {
      "description": "Hyper (Left Option) + C closes app (Cmd+Q)",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "c",
            "modifiers": {
              "mandatory": ["left_option"],
              "optional": ["any"]
            }
          },
          "to": [
            {
              "key_code": "q",
              "modifiers": ["left_command"]
            }
          ]
        }
      ]
    }
  ]
}
